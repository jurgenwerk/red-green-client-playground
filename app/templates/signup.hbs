<div class="form-container">
  <form {{action 'signup' on="submit"}}>
    <h2>
      Sign up
    </h2>

    {{input value=model.email placeholder="E-mail"}}
    {{input value=model.password type="password" placeholder="Password"}}

    {{#each model.errors as |error|}}
      <p>
        {{error.attribute}}:
        {{error.message}}
      </p>
    {{/each}}

    <button {{action 'signup'}}>
      Sign up
    </button>

    <p>
      {{#link-to 'login'}}
        Login
      {{/link-to}}
    </p>
  </form>
</div>
