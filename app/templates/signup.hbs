<div class="form-container">
  <form {{action 'signup' on="submit"}}>
    <h2>
      Sign up
    </h2>

    {{input value=email placeholder="E-mail"}}
    {{input value=password type="password" placeholder="Password"}}

    {{#if signupError}}
      <p>
        {{signupError}}
      </p>
    {{/if}}

    <button {{action 'signup' email password}}>
      Sign up
    </button>

    <p>
      {{#link-to 'login'}}
        Login
      {{/link-to}}
    </p>
  </form>
</div>
